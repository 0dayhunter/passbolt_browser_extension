
<div class="form-content">
    <div class="input-password-wrapper">
        <input type="hidden" id="js_field_secret_id" />
        <div class="input password required">
            <input maxlength="4096" type="password" id="js_secret" placeholder="password" value=""/>
            <input maxlength="4096" type="text" id="js_secret_clear" placeholder="password" class="hidden"/>
            <div class="security-token"></div>
        </div>
        <ul class="actions inline">
            <li>
                <a id="js_secret_view" class="button toggle">
                    <i class="fa fa-eye fa-fw fa-lg"></i>
                    <span class="visuallyhidden">view</span>
                </a>
            </li>
            <li>
                <a id="js_secret_generate" class="button">
                    <i class="fa fa-magic fa-fw fa-lg"></i>
                    <span class="visuallyhidden">generate</span>
                </a>
            </li>
        </ul>

        <div id="js_secret_strength" class="password-complexity">
        </div>

        <div class="input text">
            <div id="js_field_password_feedback" class="message error">
            </div>
        </div>
    </div>
</div>
