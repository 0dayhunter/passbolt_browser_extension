<div class="dialog-wrapper">
    <div class="dialog master-password">
        <div class="dialog-header">
            <h2>Please enter your passphrase</h2>
            <a class="dialog-close js-dialog-close">
                <i class="fa fa-close"></i>
                <span class="visuallyhidden">close</span>
            </a>
        </div>
        <div class="js_dialog_content dialog-content">

            <div class="form-content">

                <div class="input text required">
                    <label for="js_master_password">You need your passphrase to continue.</label>
                    <input type="text" id="js_master_password_focus_first" class="focus_first">
                    <input type="password" id="js_master_password" placeholder="passphrase" />
                    <span class="security-token"></span>
                </div>

                <div id="js_remember_options">
                </div>
            </div>

            <div class="submit-wrapper clearfix">
                <a href="#" id="master-password-submit" class="button primary" tabindex="0">OK</a>
                <a href="#" class="js-dialog-close cancel" tabindex="0">cancel</a>
            </div>
        </div>
    </div>
</div>
